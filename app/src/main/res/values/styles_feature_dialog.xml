<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Dialog"/>

    <style name="Dialog.Title">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TitleMedium.Default</item>
    </style>

    <style name="Dialog.Message">
        <item name="android:gravity">start</item>
        <item name="android:textAppearance">@style/BodyMedium.Default</item>
    </style>

    <style name="Dialog.ProgressBar" parent="ProgressBar.Default">
        <item name="indicatorSize">@dimen/dialog_progress_bar_circular_size</item>
    </style>

</resources>